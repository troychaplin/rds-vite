{
    "name": "@troychaplin79/design-ui",
    "private": false,
    "version": "0.0.19",
    "type": "module",
    "main": "dist/design-ui.cjs.js",
    "module": "dist/design-ui.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist",
        "/dist/index.css"
    ],
    "scripts": {
        "build": "tsc && yarn format && yarn lint && vite build && yarn build:css",
        "build:css": "tailwindcss --postcss -m -i ./src/tailwind.css -o ./dist/index.css",
        "storybook": "concurrently \"yarn storybook:css\" \"storybook dev -p 6006\"",
        "storybook:css": "tailwindcss --postcss -w -i ./src/tailwind.css -o ./src/index.css",
        "build-storybook": "concurrently \"yarn build-storybook:css\" \"storybook build\"",
        "build-storybook:css": "tailwindcss --postcss -m -i ./src/tailwind.css -o ./src/index.css",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier -w src",
        "clean": "rm -rf node_modules ; rm yarn.lock ; yarn install"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@storybook/addon-a11y": "^7.0.0-beta.51",
        "@storybook/addon-actions": "^7.0.0-beta.51",
        "@storybook/addon-docs": "^7.0.0-beta.51",
        "@storybook/addon-essentials": "^7.0.0-beta.51",
        "@storybook/addon-interactions": "^7.0.0-beta.51",
        "@storybook/addon-links": "^7.0.0-beta.51",
        "@storybook/blocks": "^7.0.0-beta.51",
        "@storybook/react": "^7.0.0-beta.51",
        "@storybook/react-vite": "^7.0.0-beta.51",
        "@storybook/testing-library": "^0.0.14-next.1",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@vitejs/plugin-react": "^3.1.0",
        "autoprefixer": "^10.4.13",
        "babel-loader": "^9.1.2",
        "concurrently": "^7.6.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "postcss": "^8.4.21",
        "postcss-import": "^15.1.0",
        "prettier": "^2.8.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^7.0.0-beta.51",
        "tailwindcss": "^3.2.7",
        "typescript": "^4.9.5",
        "vite": "^4.1.3",
        "vite-plugin-dts": "^2.0.0-beta.2",
        "vite-tsconfig-paths": "^4.0.5"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
